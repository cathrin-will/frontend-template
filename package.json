  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "cssnano": "^3.10.0",
    "eslint": "^3.16.1",
    "eslint-config-google": "^0.7.1",
    "eslint-config-standard": "^7.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "grunt": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-imagemin": "^1.0.1",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-uglify": "^2.2.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-insert-timestamp": "^0.1.0",
    "grunt-modernizr": "^1.0.2",
    "grunt-postcss": "^0.8.0",
    "grunt-tinypng": "^0.6.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-jsmin": "^0.1.5",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-uglify": "^2.0.1",
    "node-sass": "^4.5.0",
    "parallelshell": "^2.0.0",
    "pixrem": "^3.0.2",
    "postcss-cli": "^3.0.0-beta",
    "uglify-js": "^2.8.5"
  },
  "dependencies": {
    "inuitcss": "^6.0.0-beta.4"
  },
  "scripts": {
    "sass": "node-sass src/sass/main.scss --output-style compressed --source-map-root  --source-map  dist/css/main.css.map dist/css/main.css",
    "autoprefixer": "postcss --use autoprefixer --replace dist/css/main.css",
    "uglify": "uglifyjs src/js/main.js src/js/base/**/*.js --comments '/^!/' --mangle -o dist/js/main.min.js",
    "lint": "eslint src/js/main.js src/js/base/plugins/",
    "all": "npm run sass --silent & npm run autoprefixer --silent && parallelshell \"npm run uglify --silent \" & grunt images"
  }
}
